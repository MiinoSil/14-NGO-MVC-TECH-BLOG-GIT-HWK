
{{#each blogs as |blog|}}

    <div class="row">
        <div class="container">
            <div class="row  justify-content-center">
                <div class="col-8">
                    <h2>
                    <a class="" href="/blog/{{blog.id}}">{{blog.title}}</a>
                    </h2>
                </div>

                <div class="col-4">
                    <p class="">Created by
                    {{blog.user.username}}
                    on
                    {{format_date blog.date_created}}
                    </p>
                </div>
            </div>
            <div class="">
                <p class="text-center">
                    {{blog.description}}
                </p>
            </div>
        </div>
    </div>

{{/each}}