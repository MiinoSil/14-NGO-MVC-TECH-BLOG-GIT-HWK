<div class="container">
    <div class="row">
        <h2>{{title}}</h2>
    </div>
    <div class="row">
        <h5>{{user.username}} on {{format_date date_created}}</h5>
    </div>
    <div class="row">
        <p>{{description}}</p>
    </div>
</div>

{{#if logged_in}}
<form class="new-post-form justify-content-center" data-blogid="{{id}}">
    <div>
        <textarea name="post-body" id="post_description" cols="30" rows="4" placeholder="Enter a message here..."></textarea>
    </div>
    <div>
        <button class="button btn" type="submit">Submit Post</button>
    </div>
</form>
{{/if}}

<h2 class="text-center">POSTS</h2>
{{#each posts as |post|}}
<div>
    <h5 class="text-center">Created by {{post.user.username}} on {{format_date date_created}}</h5>
    <p class="text-center">{{posts.post_description}}</p>
</div>
{{/each}}

<script src="../public/js/posts.js"></script>